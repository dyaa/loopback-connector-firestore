{
	"extends": ["loopback", "prettier"],
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"prettier/prettier": ["error", { "singleQuote": true }],
		"indent": ["error", "tab"],
		"max-len": ["error", 120]
	},
	"globals": {
		"globalThis": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"parser": "@typescript-eslint/parser"
}
