{
	"compilerOptions": {
		"target": "es2018",
		"lib": ["es2018", "dom"],
		"typeRoots": ["./node_modules/@types", "./lib/typings"],
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"declaration": true,
		"types": ["node"],
		"outDir": "dist",
		"strict": true
	},
	"include": ["lib"],
	"exclude": ["test"]
}
